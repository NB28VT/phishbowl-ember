<h1>Add Shows</h1>

<h3>Add a Show</h3>
<div class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">Venue</label>
        <div class="col-sm-10">
            {{input type="text" value=model.venue class="form-control"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Date</label>
        <div class="col-sm-10">
            {{input type="text" value=model.date class="form-control"}}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" {{action 'saveShow' model}}>Add Show</button>
        </div>
    </div>
</div>